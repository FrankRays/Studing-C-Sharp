<UserControl xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"  x:Class="butterfly.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600" d:DesignWidth="800">

    <Grid x:Name="LayoutRoot" Background="White" MouseMove="move">
        <Canvas x:Name="canvas">
            <my:Label Name="text" />
            <Ellipse Height="10"
                     Opacity="0"
                     Name="ellipse1" 
                     Fill="Blue" 
                     Width="10" />
        </Canvas>
    </Grid>
</UserControl>
